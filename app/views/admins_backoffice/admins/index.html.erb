<h1><%= t('messages.listing', model: @admins.model_name.human(cont: 2)) %></h1>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th><%= translate_field(@admins, :email) %></th>
        <th> <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success" do %>
          <i class="glyphicon-plus"></i>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <th scope="row"><%= admin.id %></th>
        <td><%= admin.email %></td>
        <td>
        <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
        <% end %>

        <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle",
     data: {confirm: t('messages.confirm_with', item: admin.email.truncate(15))} do %>
          <i class="fa fa-trash-o"></i>
        <% end %>

        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
    <div class="text-center">
      <%= paginate @admins %>
    </div>
</div>