<h1>Listando Assuntos</h1>


<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th><%= translate_field(@subjects, :description) %></th>
        <th> <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success" do %>
          <i class="glyphicon-plus"></i>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <th scope="row"><%= subject.id %></th>
        <td><%= subject.description %></td>
        <td>
        <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
        <% end %>

        <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle",
        data: {confirm: "Deseja excluÃ­r?"} do %>
          <i class="fa fa-trash-o"></i>
        <% end %>

        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
    <div class="text-center">
      <%= paginate @subjects %>
    </div>
</div>